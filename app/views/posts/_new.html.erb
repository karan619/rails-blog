<%= form_for(post) do |f| %>
<div class="card">
<div class="card-content">
  <div class="input-field">
  <%= f.hidden_field :user_id, value: current_user().id %>
    <%= f.text_field :title, class: 'validate', pattern: '.{3,100}', required: true, title: "3-100 characters", length: 100 %>
    <%= f.label :title %>
  </div>
  <div class="input-field">
    <%= f.text_area :content, class:'materialize-textarea validate', pattern: '.{,10000}', required: true, title: "Max 10000 characters", length: 10000 %>
    <%= f.label :content %>
  </div>
</div>
  <div class="card-action"><%= f.submit "Create", class: 'btn'%></div>
</div>
<% end %>